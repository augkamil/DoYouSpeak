<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res/com.doyouspeak"
   android:layout_width="fill_parent"
   android:layout_height="wrap_content"
   android:orientation="vertical"
   android:background="@drawable/background_por"
   >
   
   <com.markupartist.android.widget.ActionBar
	    android:id="@+id/actionbar"
	    app:title="@string/app_name"
	    style="@style/ActionBar"
        />

   
   <TextView
        android:id="@+id/myExpressionsList"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/my_expressions_list" 
        android:textColor="@color/font_color"
        android:textStyle="bold" 
        android:padding="5dip"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_gravity="center_vertical" android:gravity="center_horizontal"/>
   
   <ListView android:id="@android:id/list"
	  android:layout_width="fill_parent"
	  android:layout_height="wrap_content"
	  android:layout_marginBottom="40dip" android:paddingLeft="20dip" android:paddingRight="20dip" android:paddingTop="15dip">
	  
    </ListView>
</LinearLayout>